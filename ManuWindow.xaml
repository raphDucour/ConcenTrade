<Window x:Class="Concentrade.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Menu principal"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <Button Content="Paramètres" Width="200" Height="40" Margin="0,0,0,10"/>
        <Button Content="Statistiques" Width="200" Height="40" Margin="0,0,0,10"/>
        <Button Content="Quitter" Width="200" Height="40" Click="Quit_Click"/>
    </StackPanel>
</Window>
