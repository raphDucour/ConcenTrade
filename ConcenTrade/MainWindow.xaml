<Window x:Class="Concentrade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConcenTrade"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="Window_Loaded">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Quel est ton prénom ?" Margin="0,0,0,10"/>
        <TextBox x:Name="NameInput" Width="200" TextChanged="NameInput_TextChanged"/>
        <TextBlock x:Name="GreetingText" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.519,-1.016"/>
        <Button Content="Démarrer" Click="Start_Click" Width="200" RenderTransformOrigin="0.679,0.808"/>
    </StackPanel>
</Window>


