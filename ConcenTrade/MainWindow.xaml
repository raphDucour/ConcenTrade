<Window x:Class="Concentrade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConcenTrade"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Quel est ton prénom ?" Margin="0,0,0,10"/>
        <TextBox x:Name="NameInput" Width="200" Margin="0,0,0,10"/>
        <Button Content="Démarrer" Click="Start_Click" Width="200" Margin="0,0,0,10"/>
        <TextBlock x:Name="GreetingText" FontWeight="Bold" FontSize="16"/>
    </StackPanel>
</Window>


