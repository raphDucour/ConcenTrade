<Page x:Class="Concentrade.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu principal"
        Background="#F5F5F5">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Bienvenue dans le menu principal"
                   Margin="0,0,0,20"
                   FontWeight="SemiBold"
                   FontSize="16"/>

        <Button Content="Paramètres"
                Width="200"
                Height="40"
                Margin="0,0,0,10"
                Click="Settings_Click"/>

        <Button Content="Statistiques"
                Width="200"
                Height="40"
                Margin="0,0,0,10"
                Click="Stats_Click"/>

        <Button Content="Quitter"
                Width="200"
                Height="40"
                Margin="0,10,0,0"
                Click="Quit_Click"/>

        <TextBlock x:Name="GreetingText"
           FontSize="20"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           Margin="0,20,0,20"/>
    </StackPanel>
</Page>
