<Page x:Class="Concentrade.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F5F5"
      Title="Menu principal">

    <Grid>
        <!-- Définir 3 lignes: top, centre, bottom -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Paramètres en haut à gauche -->
        <Button Content="Paramètres"
                Width="120"
                Height="40"
                Margin="20"
                Click="Settings_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Grid.Row="0"/>

        <!-- Centre: texte + boutons -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Bienvenue dans le menu principal"
                       Margin="0,0,0,20"
                       FontWeight="SemiBold"
                       FontSize="16"
                       HorizontalAlignment="Center"/>

            <Button Content="Statistiques"
                    Width="200"
                    Height="40"
                    Margin="0,0,0,10"
                    Click="Stats_Click"/>

            <TextBlock x:Name="GreetingText"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,20"/>
        </StackPanel>

        <!-- Quitter en bas à droite -->
        <Button Content="Quitter"
                Width="100"
                Height="35"
                FontSize="14"
                Background="#EDEDED"
                Foreground="#333"
                BorderBrush="Transparent"
                Cursor="Hand"
                Click="Quit_Click"
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Grid.Row="2"/>
    </Grid>
</Page>
