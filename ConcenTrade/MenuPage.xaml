<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Concentrade.MenuPage"
      Title="Menu principal"
      Background="#B2F5D6" av:DesignHeight="710.952" av:DesignWidth="1425.749">

    <Page.Resources>
        <!-- Ombre douce -->
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Color="#44000000"/>

        <!-- Style boutons arrondis -->
        <Style TargetType="{x:Type Button}" x:Key="RoundedButtonStyle">
            <Setter Property="Background" Value="#7F9CF5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Colonne gauche : Titre + Boutons -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="416" Margin="0,215,1147,0" Grid.RowSpan="2">
            <!-- Titre en haut à gauche -->
            <TextBlock Text="ConcenTrade"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#2E2E2E"
                       Margin="0,0,0,100"/>
            <!-- espace entre titre et bouton Start -->

            <!-- Boutons alignés verticalement -->
            <StackPanel>
                <Button Content="Start"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="StartSession_Click"
                        Margin="0,0,0,30"/>

                <Button Content="Paramètres"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="Settings_Click"
                        Margin="0,0,0,10"/>
                <Button Content="Statistiques"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="Stats_Click"
                        Margin="0,0,0,10"/>
                <Button Content="Quitter"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="Quit_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Bouton Reset en bas à droite -->
        <Button Grid.Column="1" Grid.Row="1"
                Content="Reset"
                Style="{StaticResource RoundedButtonStyle}"
                Width="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,10,10"
                Click="ResetData_Click"/>
    </Grid>
</Page>
