<Page
    x:Class="Concentrade.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Menu principal">

    <!-- Dégradé fond sombre -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F2027" Offset="0"/>
            <GradientStop Color="#203A43" Offset="0.5"/>
            <GradientStop Color="#2C5364" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Style bouton moderne -->
        <Style x:Key="ModernGlassButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Titre centré -->
            <TextBlock Text="ConcenTrade"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Boutons centrés -->
            <Button Content="Start" Click="StartSession_Click" Style="{StaticResource ModernGlassButton}"/>
            <Button Content="Paramètres" Click="Settings_Click" Style="{StaticResource ModernGlassButton}"/>
            <Button Content="Statistiques" Click="Stats_Click" Style="{StaticResource ModernGlassButton}"/>
            <Button Content="Quitter" Click="Quit_Click" Style="{StaticResource ModernGlassButton}"/>
        </StackPanel>

        <!-- Reset en bas à droite -->
        <Button Content="Reset"
                Style="{StaticResource ModernGlassButton}"
                Width="120"
                Height="40"
                FontSize="14"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Click="ResetData_Click"/>
    </Grid>
</Page>
