<Page x:Class="Concentrade.TimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Concentrade"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimerPage" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ZenBackgroundBrush}">

        <!-- Canvas pour les particules en arrière-plan -->
        <Canvas x:Name="ParticleCanvas"/>

        <!-- Grille principale pour le contenu centré -->
        <Grid x:Name="MainGrid">
            <StackPanel x:Name="DisplayPanel" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Texte indiquant l'état actuel (Travail, Pause) -->
                <TextBlock x:Name="StateText" Style="{StaticResource PageTitle}" FontSize="24" Margin="0,0,0,20" Text="Cycle 1/4 - Travail"/>

                <!-- Conteneur pour la barre de progression et le timer -->
                <Grid Width="250" Height="250">
                    <!-- Barre de progression circulaire -->
                    <ProgressBar x:Name="CircularProgressBar" 
                                 Style="{StaticResource CircularProgressBarStyle}"
                                 Minimum="0" Maximum="100" Value="100"/>
                    <!-- Texte du timer au centre -->
                    <TextBlock x:Name="TimerText" Style="{StaticResource PageTitle}" Text="25:00"/>
                </Grid>

                <!-- Boutons de contrôle -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button x:Name="PauseButton" Content="⏯️ Pause" Style="{StaticResource ControlButton}" Margin="5" Click="PauseButton_Click"/>
                    <Button x:Name="StopButton" Content="⏹️ Stop" Style="{StaticResource ControlButton}" Margin="5" Click="StopButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
