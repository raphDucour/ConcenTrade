<Window x:Class="Concentrade.BlocagePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#AA000000"
        Width="400" Height="200"
        ResizeMode="NoResize"
        Topmost="True">
    <Border Background="#1F1F1F" CornerRadius="20" Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="MessageText" Text="Cette application est bloquée" 
                       Foreground="White" FontSize="18" TextAlignment="Center" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Continuer quand même" Click="Continue_Click"
                        Margin="10" Padding="10,5" Width="150" Background="#444" Foreground="White"/>
                <Button Content="Fermer l'application" Click="CloseApp_Click"
                        Margin="10" Padding="10,5" Width="150" Background="#00D09C" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
