<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Concentrade.RunningAppsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Applications en cours" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1F1F1F"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Border CornerRadius="20" Background="#1F1F1F" BorderBrush="#333333" BorderThickness="1" Margin="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="⚠️" FontSize="32" HorizontalAlignment="Center"/>
                <TextBlock x:Name="AppNameText"
                         Text=""
                         Foreground="White" 
                         FontSize="24" 
                         FontWeight="SemiBold"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
                <TextBlock Text="Sélectionnez les applications à fermer avant de commencer" 
                         Foreground="#8FA3B0" 
                         FontSize="14"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Liste des applications -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="AppsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5" 
                                    Padding="15" 
                                    Background="#2A2A2A" 
                                    CornerRadius="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0" 
                                              IsChecked="{Binding IsSelected}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,15,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                 Foreground="White" 
                                                 FontSize="16"/>
                                        <TextBlock Text="{Binding Description}" 
                                                 Foreground="#8FA3B0" 
                                                 FontSize="12"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Boutons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button Content="Continuer sans fermer" 
                        Click="Cancel_Click"
                        Width="200"
                        Height="40"
                        Background="#444444"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,10,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="Fermer les applications" 
                        Click="CloseSelected_Click"
                        Width="200"
                        Height="40"
                        Background="#00D09C"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window> 