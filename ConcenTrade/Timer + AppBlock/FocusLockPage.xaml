<Window x:Class="Concentrade.FocusModePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mode Focus Actif" Height="200" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">
    <Border Background="#1C1C1E" CornerRadius="15" BorderBrush="#FF00E0FF" BorderThickness="2">
        <Grid>
            <TextBlock x:Name="MessageText" Text="Une application distrayante a été lancée. Elle va être fermée." 
                       Foreground="White" FontSize="18" TextWrapping="Wrap" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,20,20,60"/>
            <Button Content="Fermer l'application" Click="CloseApp_Click" 
                    Style="{StaticResource DestructiveButton}" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="200"/>
        </Grid>
    </Border>
</Window>