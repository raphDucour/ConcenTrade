<Page x:Class="Concentrade.LoginSystem.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignUpPage">

    <Grid Background="#FF1E1E2F">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Inscription" FontSize="26" Foreground="White" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <TextBlock Text="Email" Foreground="Gray"/>
            <TextBox x:Name="EmailBox" Padding="10" FontSize="14" Margin="0 5"/>

            <TextBlock Text="Mot de passe" Foreground="Gray"/>
            <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="14" Margin="0 5"/>

            <Button x:Name="SignUpButton" Content="Créer un compte"
                    Click="SignUpButton_Click"
                    Padding="10" FontSize="16" Background="#FF3A6DF0" Foreground="White" BorderThickness="0" Margin="0 10"/>

            <TextBlock HorizontalAlignment="Center" Foreground="White">
                <Hyperlink Click="BackToLogin_Click">Déjà un compte ? Se connecter</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
