<Page x:Class="Concentrade.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="WelcomePage"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Storyboard x:Key="TransitionOutToMenu">
            <DoubleAnimation
                Storyboard.TargetName="MainContent"
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.5" />
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1E2837" Offset="0"/>
                <GradientStop Color="#FF2A3B4F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Ellipse x:Name="MeditationCircle" Opacity="0" Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100" RenderTransformOrigin="0.5,0.5">
            <Ellipse.Fill>
                <SolidColorBrush Color="#FF3A4C62" Opacity="0.5"/>
            </Ellipse.Fill>
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="MeditationScale" ScaleX="0.5" ScaleY="0.5"/>
                    <TranslateTransform />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>

        <Path x:Name="ZenWave1" Opacity="0" Data="M0,300 C200,280 400,320 600,300 S1000,280 1280,300 V720 H0 Z" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5">
            <Path.Fill>
                <SolidColorBrush Color="#FF4A607C" Opacity="0.3"/>
            </Path.Fill>
            <Path.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="ZenWave1Transform" Y="0"/>
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <Path x:Name="ZenWave2" Opacity="0" Data="M0,350 C200,330 400,370 600,350 S1000,330 1280,350 V720 H0 Z" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5">
            <Path.Fill>
                <SolidColorBrush Color="#FF4A607C" Opacity="0.4"/>
            </Path.Fill>
            <Path.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="ZenWave2Transform" Y="0"/>
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <Grid x:Name="MainContent" Opacity="1" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TranslateTransform Y="0"/>
            </Grid.RenderTransform>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Path x:Name="FocusSymbol" Opacity="0" Fill="White" Stretch="Uniform" Width="100" Height="100" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,20"
                      Data="M80,0 H20 A20,20 0 0,0 0,20 V80 A20,20 0 0,0 20,100 H80 A20,20 0 0,0 100,80 V20 A20,20 0 0,0 80,0 Z M50,28 C70,28 85,42 90,50 C85,58 70,72 50,72 C30,72 15,58 10,50 C15,42 30,28 50,28 Z M50,43 A7,7 0 1 0 50,57 A7,7 0 1 0 50,43 Z">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="FocusSymbolScale" ScaleX="0.5" ScaleY="0.5"/>
                            <TranslateTransform x:Name="FocusSymbolTransform" />
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>

                <TextBlock x:Name="WelcomeText" TextWrapping="Wrap" Opacity="0" FontSize="36" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" TextAlignment="Center" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <TranslateTransform x:Name="TextTransform" Y="30" />
                            <ScaleTransform x:Name="TextScale" />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBlock x:Name="FocusMessage" Text="Préparons-nous pour une session de concentration !" TextWrapping="Wrap" Opacity="0" FontSize="20" FontWeight="Regular" Foreground="White"
                           HorizontalAlignment="Center" TextAlignment="Center" Margin="0,10,0,0" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <TranslateTransform x:Name="MessageTransform" Y="20" />
                            <ScaleTransform x:Name="MessageScale" />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>