<Page x:Class="Concentrade.Pages_principales.CollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Concentrade.Pages_principales"
      xmlns:collection="clr-namespace:Concentrade.Pages_principales.Collection"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CollectionPage" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ZenBackgroundBrush}">
        <!-- Fond sombre et Canvas pour les particules animées -->
        <Canvas x:Name="ParticleCanvas" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Bouton Retour en haut à gauche -->
            <Button x:Name="RetourButton" Content="&lt; Retour" Style="{StaticResource ZenButtonStyle}"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"
                    Click="RetourButton_Click"/>

            <TextBlock Text="Ma Collection" Style="{StaticResource PageTitle}" Grid.Row="0" Margin="0,40,0,20"/>

            <!-- Bouton pour acheter des caisses -->
            <Button x:Name="AcheterButton" Content="Ouvrir une Caisse" Style="{StaticResource ZenButtonStyle}"
                    Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,20"
                    Click="AcheterButton_Click"/>

            <!-- Panel des cartes avec une barre de défilement -->
            <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="40,0,40,20">
                <WrapPanel x:Name="CardsPanel" HorizontalAlignment="Center"/>
            </ScrollViewer>
        </Grid>

        <!-- Overlay pour l'achat, maintenant plus stylisé -->
        <Grid x:Name="AchatOverlay" Background="#DD000000" Visibility="Collapsed">
            <Border Background="#2B3A4A" CornerRadius="20" Padding="40"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{StaticResource ZenButtonBorderBrush}" BorderThickness="1"
                    MaxWidth="800">
                <StackPanel>
                    <TextBlock Text="Boutique des Caisses" Style="{StaticResource PageTitle}" FontSize="36" Margin="0,0,0,30"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Caisse 1 -->
                        <Button Click="BuyCat_Click" Style="{StaticResource ZenButtonStyle}" Margin="10" Padding="20" Width="200">
                            <StackPanel>
                                <TextBlock Text="Caisse du Débutant" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                                <TextBlock Text="Contient les animaux de base" TextWrapping="Wrap" Foreground="#CCCCCC" TextAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="Coût: 100 Points" FontStyle="Italic" Foreground="#AAAAAA" TextAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Button>
                        <!-- Caisse 2 -->
                        <Button Click="BuyDog_Click" Style="{StaticResource ZenButtonStyle}" Margin="10" Padding="20" Width="200">
                            <StackPanel>
                                <TextBlock Text="Caisse de l'Explorateur" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                                <TextBlock Text="Débloque des compagnons rares" TextWrapping="Wrap" Foreground="#CCCCCC" TextAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="Coût: 300 Points" FontStyle="Italic" Foreground="#AAAAAA" TextAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Button>
                        <!-- Caisse 3 -->
                        <Button Click="BuyDragon_Click" Style="{StaticResource ZenButtonStyle}" Margin="10" Padding="20" Width="200">
                            <StackPanel>
                                <TextBlock Text="Caisse du Maître Zen" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                                <TextBlock Text="Des créatures épiques vous attendent" TextWrapping="Wrap" Foreground="#CCCCCC" TextAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="Coût: 800 Points" FontStyle="Italic" Foreground="#AAAAAA" TextAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <Button Content="Fermer" Style="{StaticResource ZenButtonStyle}" Click="CloseAchatOverlay_Click"
                            Margin="0,30,0,0" Width="150" Height="40" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
