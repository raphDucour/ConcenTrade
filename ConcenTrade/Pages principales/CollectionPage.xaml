<Page x:Class="Concentrade.Pages_principales.CollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Concentrade.Pages_principales"
      xmlns:collection="clr-namespace:Concentrade.Pages_principales.Collection"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CollectionPage" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ZenBackgroundBrush}">
        <!-- Fond sombre et Canvas pour les particules animées -->
        <Canvas x:Name="ParticleCanvas" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Titre et retour -->
                <RowDefinition Height="*"/>
                <!-- ScrollViewer -->
                <RowDefinition Height="Auto"/>
                <!-- Bouton -->
            </Grid.RowDefinitions>

            <!-- Bouton Retour en haut à gauche -->
            <Button x:Name="RetourButton" Content="&lt; Retour" Style="{StaticResource ZenButtonStyle}"
                    Width="100" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"
                    Click="RetourButton_Click" Grid.Row="0"/>

            <TextBlock Text="Ma Collection" Style="{StaticResource PageTitle}" Grid.Row="0" Margin="0,40,0,20" HorizontalAlignment="Center"/>

            <!-- Panel des cartes avec une barre de défilement -->
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="40,0,40,20">
                <WrapPanel x:Name="CardsPanel" HorizontalAlignment="Center"/>
            </ScrollViewer>

            <!-- Bouton pour acheter des caisses -->
            <Button x:Name="AcheterButton" Content="Ouvrir une Caisse" Style="{StaticResource ZenButtonStyle}"
                    Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,20"
                    Width="300" Height="50" Padding="0,20" FontSize="22" FontWeight="Bold"
                    Click="AcheterButton_Click"/>
        </Grid>

        <!-- Overlay pour l'achat, maintenant plus stylisé -->
        <Grid x:Name="AchatOverlay" Background="#DD000000" Visibility="Collapsed">
            <Border Background="#2B3A4A" CornerRadius="20" Padding="60"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{StaticResource ZenButtonBorderBrush}" BorderThickness="1"
                    MaxWidth="1200">
                <StackPanel>
                    <TextBlock Text="Boutique" Style="{StaticResource PageTitle}" FontSize="36" Margin="0,0,0,30"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Caisse 1 -->
                        <Grid>
                            <Button x:Name="Caisse1Button" Click="BuyCat_Click" Style="{StaticResource ZenButtonStyle}" Margin="10" Padding="20" Width="200" Height="200">
                                <StackPanel>
                                    <Image Source="/Images/coffres/coffre commun.png" Stretch="Uniform" Height="198"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <!-- Caisse 2 -->
                        <Grid>
                            <Button x:Name="Caisse2Button" Click="BuyDog_Click" Style="{StaticResource ZenButtonStyle}" Margin="10" Padding="20" Width="200" Height="200">
                                <StackPanel>
                                    <Image x:Name="Caisse2Image" Source="/Images/coffres/coffre rare.png" Stretch="Uniform" Height="198"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <!-- Caisse 3 -->
                        <Grid>
                            <Button x:Name="Caisse3Button" Click="BuyDragon_Click" Style="{StaticResource ZenButtonStyle}" Margin="10" Padding="20" Width="200" Height="200">
                                <StackPanel>
                                    <Image x:Name="Caisse3Image" Source="/Images/coffres/coffre epic.png" Stretch="Uniform" Height="198"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <!-- Caisse 4 -->
                        <Grid>
                            <Button x:Name="Caisse4Button" Click="BuyCaisse4_Click" Style="{StaticResource ZenButtonStyle}" Margin="10" Padding="20" Width="200" Height="200">
                                <StackPanel>
                                    <Image x:Name="Caisse4Image" Source="/Images/coffres/coffre legendaire.png" Stretch="Uniform" Height="198"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                    <Button Content="Fermer" Style="{StaticResource ZenButtonStyle}" Click="CloseAchatOverlay_Click"
                            Margin="0,30,0,0" Width="150" Height="40" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

