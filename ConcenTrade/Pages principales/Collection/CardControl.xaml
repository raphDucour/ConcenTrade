<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Concentrade.Pages_principales.Collection.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="280">
    
    <Border x:Name="CardBorder" 
            Background="#2A2A2A"
            CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect x:Name="CardGlow" 
                             BlurRadius="0" 
                             ShadowDepth="0" 
                             Opacity="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock x:Name="CardEmoji"
                      Text=""
                      FontSize="80"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      TextAlignment="Center"
                      Margin="0,0,0,10"/>
            
            <TextBlock x:Name="CardNameText"
                      Grid.Row="1"
                      Text=""
                      Foreground="White"
                      FontSize="20"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      TextAlignment="Center"
                      TextWrapping="Wrap"
                      Margin="10"/>
        </Grid>
    </Border>
</UserControl> 