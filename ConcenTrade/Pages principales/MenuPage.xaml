<Page x:Class="Concentrade.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Concentrade"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MenuPage"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ModeRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent" Padding="5">
                            <TextBlock x:Name="text" Text="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="White"/>
                                <Setter TargetName="text" Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>
    <Grid x:Name="MainGrid" Background="{StaticResource ZenBackgroundBrush}">
        <Canvas x:Name="ParticleCanvas" Background="Transparent"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,150">

            <Image Source="/Images/ConcenTrade_logo_v2-removebg-preview.png"
                   Width="400"
                   Margin="0,0,0,50">
                <Image.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.4" BlurRadius="10"/>
                </Image.Effect>
            </Image>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <RadioButton x:Name="PomodoroModeButton" Content="Cycles Pomodoro" IsChecked="True" GroupName="Mode" Style="{StaticResource ModeRadioButtonStyle}" Click="ModeButton_Click"/>
                <RadioButton x:Name="CustomModeButton" Content="Temps Personnalisé" GroupName="Mode" Style="{StaticResource ModeRadioButtonStyle}" Margin="20,0,0,0" Click="ModeButton_Click"/>
            </StackPanel>

            <StackPanel x:Name="PomodoroPanel">
                <TextBlock x:Name="SliderLabel" Text="Durée de la session : 25 min" Foreground="{StaticResource ZenTextBrush}" FontSize="22" FontWeight="Normal" HorizontalAlignment="Center" Margin="0,0,0,10" Opacity="0.8"/>
                <Slider x:Name="DureeSlider"
                        Width="350"
                        Minimum="0" Maximum="100"
                        ValueChanged="DureeSlider_ValueChanged"
                        Margin="0,0,0,40"
                        Style="{StaticResource ZenSliderStyle}"/>
            </StackPanel>

            <StackPanel x:Name="CustomTimePanel" Visibility="Collapsed">
                <TextBlock x:Name="WorkTimeLabel" Text="Temps de travail : 30 minutes" Foreground="{StaticResource ZenTextBrush}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,10" Opacity="0.8"/>
                <Slider x:Name="WorkTimeSlider" Minimum="5" Maximum="120" Value="30" SmallChange="1" TickFrequency="5" IsSnapToTickEnabled="True"
            ValueChanged="CustomTimeSlider_ValueChanged"
            Width="350" Style="{StaticResource ZenSliderStyle}"/>

                <TextBlock x:Name="BreakTimeLabel" Text="Temps de pause : 5 minutes" Foreground="{StaticResource ZenTextBrush}" FontSize="18" HorizontalAlignment="Center" Margin="0,20,0,10" Opacity="0.8"/>
                <Slider x:Name="BreakTimeSlider" Minimum="1" Maximum="30" Value="5" SmallChange="1" TickFrequency="1" IsSnapToTickEnabled="True"
            ValueChanged="CustomTimeSlider_ValueChanged"
            Width="350" Style="{StaticResource ZenSliderStyle}"/>

                <TextBlock x:Name="CycleCountLabel" Text="Nombre de cycles : 2" Foreground="{StaticResource ZenTextBrush}" FontSize="18" HorizontalAlignment="Center" Margin="0,20,0,10" Opacity="0.8"/>
                <Slider x:Name="CycleCountSlider" Minimum="1" Maximum="10" Value="2" SmallChange="1" TickFrequency="1" IsSnapToTickEnabled="True"
            ValueChanged="CustomTimeSlider_ValueChanged"
            Width="350" Style="{StaticResource ZenSliderStyle}"/>
            </StackPanel>

            <!-- Toggle Switch pour Mode Focus -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
                <ToggleButton x:Name="FocusModeToggle"
                              Width="60" Height="30"
                              VerticalAlignment="Center">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <!-- Fond du switch -->
                                <Border x:Name="SwitchBackground"
                                        CornerRadius="15"
                                        Background="#888"
                                        Height="30" Width="60"/>
                                <!-- Bulle du switch -->
                                <Ellipse x:Name="SwitchThumb"
                                         Fill="White"
                                         Width="26" Height="26"
                                         Margin="2,2,32,2"
                                         HorizontalAlignment="Left"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchThumb" Property="Margin" Value="32,2,2,2"/>
                                    <Setter TargetName="SwitchBackground" Property="Background" Value="#4CAF50"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="SwitchThumb" Property="Margin" Value="2,2,32,2"/>
                                    <Setter TargetName="SwitchBackground" Property="Background" Value="#888"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                <TextBlock Text="Mode Focus : pas d'autorisation aux app bloquées"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"/>
            </StackPanel>

            <Button Content="Démarrer la concentration" Width="300" Height="60" Style="{StaticResource ZenButtonStyle}" Click="StartSession_Click" FontSize="22" BorderThickness="2" Margin="0,40,0,0"/>

        </StackPanel>
        <Button x:Name="CollectionButton" Content="🃏 Ma Collection" Click="Stats_Click" Style="{StaticResource ZenIconButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,30,0,0" FontSize="18" FontWeight="SemiBold"/>
        <TextBlock Text="{Binding Points, StringFormat='💰 {0} Points'}" Foreground="{StaticResource ZenButtonTextBrush}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,35,40,0" Opacity="0.7"/>
        <Button x:Name="SettingsButton" Content="⚙️" Click="SettingsButton_Click" Style="{StaticResource ZenIconButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,30" FontSize="32"/>

        <Popup x:Name="SettingsPopup" PlacementTarget="{Binding ElementName=SettingsButton}" Placement="Top" AllowsTransparency="True" StaysOpen="False">
            <Border Background="#37474F" BorderBrush="{StaticResource ZenButtonBorderBrush}" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <Button Content="⚙️ Préférences" Click="Settings_Click" Style="{StaticResource ZenButtonStyle}" Margin="2"/>
                    <Button Content="🔒 Se déconnecter" Click="Logout_Click" Style="{StaticResource ZenButtonStyle}" Margin="2"/>
                    <Button Content="❌ Quitter" Click="Quit_Click" Style="{StaticResource ZenButtonStyle}" Background="#E57373" Foreground="White" Margin="2"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Page>