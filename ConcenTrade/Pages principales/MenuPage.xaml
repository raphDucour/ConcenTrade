<Page
    x:Class="Concentrade.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Menu principal">

    <!-- Fond dégradé -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F2027" Offset="0"/>
            <GradientStop Color="#203A43" Offset="0.5"/>
            <GradientStop Color="#2C5364" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Styles de texte -->
        <Style x:Key="AppTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            <Setter Property="FontSize" Value="86"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AppSubtitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <Style x:Key="DurationText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Style pour les boutons principaux -->
        <Style x:Key="MainActionButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="0,20"/>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="60">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                ShadowDepth="0" 
                                                Color="#40000000"/>
                            </Border.Effect>
                            <Grid>
                                <ContentPresenter x:Name="contentPresenter" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#88FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton statistiques -->
        <Style x:Key="StatsButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,20,20,0"/>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                ShadowDepth="0" 
                                                Color="#40000000"/>
                            </Border.Effect>
                            <Grid>
                                <TextBlock x:Name="PointsDisplay"
                                         Text="{Binding Points, StringFormat='{}{0} points'}"
                                         FontSize="16"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#88FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Slider -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
        </Style>

        <!-- Style pour les boutons du menu popup -->
        <Style x:Key="PopupMenuButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Border x:Name="glowBorder"
                                        Background="#22FFFFFF"
                                        CornerRadius="8"
                                        Opacity="0">
                                    <Border.Effect>
                                        <BlurEffect Radius="10"/>
                                    </Border.Effect>
                                </Border>
                                <ContentPresenter x:Name="contentPresenter"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="20,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="contentPresenter"
                                                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                           To="5" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="contentPresenter"
                                                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                           To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les boutons de durée -->
        <Style x:Key="DureeButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="40">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" 
                                                ShadowDepth="0" 
                                                Color="#40000000"/>
                            </Border.Effect>
                            <Grid>
                                <ContentPresenter x:Name="contentPresenter" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#88FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Animation de fade simple et épurée -->
                    <DoubleAnimation 
                        Storyboard.TargetName="MainGrid"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <PowerEase Power="0.4" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid x:Name="MainGrid" Opacity="0">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        
        <!-- Logo et Titre -->
        <StackPanel VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   Margin="0,120,0,0">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <TextBlock Text="&#xE945;" 
                         FontFamily="Segoe MDL2 Assets"
                         FontSize="72"
                         Foreground="#80FFFFFF"
                         VerticalAlignment="Center"
                         Margin="0,0,25,0"/>
                <TextBlock Text="ConcenTrade"
                         Style="{StaticResource AppTitle}"/>
            </StackPanel>
            <TextBlock Text="Améliore ta concentration, un point à la fois"
                     Style="{StaticResource AppSubtitle}"
                     HorizontalAlignment="Center"
                     Margin="0,15,0,0"/>
        </StackPanel>

        <!-- Bouton principal Start -->
        <Button Style="{StaticResource MainActionButton}"
                Click="StartSession_Click"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <TextBlock Text="&#xE768;"
                     FontFamily="Segoe MDL2 Assets"
                     FontSize="48"/>
        </Button>

        <!-- Curseur de durée -->
        <StackPanel Margin="0,200,0,0" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <TextBlock x:Name="SliderLabel"
                     Style="{StaticResource DurationText}"
                     Text="Durée : 25 min"
                     Margin="0,0,0,10"/>
            <Slider x:Name="DureeSlider"
                    Minimum="0"
                    Maximum="100"
                    Value="50"
                    TickFrequency="25"
                    IsSnapToTickEnabled="True"
                    IsMoveToPointEnabled="True"
                    Style="{StaticResource ModernSlider}"
                    ValueChanged="DureeSlider_ValueChanged"/>
        </StackPanel>

        <!-- Bouton Statistiques -->
        <Button Style="{StaticResource StatsButton}"
                Click="Stats_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"/>

        <!-- Menu Settings -->
        <Button x:Name="SettingsButton"
                Content="&#xE713;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="16"
                Style="{StaticResource MainActionButton}"
                Width="40"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,20,0,0"
                Click="SettingsButton_Click"/>

        <!-- Menu Popup pour les paramètres -->
        <Popup x:Name="SettingsPopup" 
               PlacementTarget="{Binding ElementName=SettingsButton}" 
               Placement="Bottom"
               AllowsTransparency="True"
               PopupAnimation="Fade"
               StaysOpen="False">
            <Border Background="#CC203A43"
                    BorderBrush="#44FFFFFF"
                    BorderThickness="1"
                    CornerRadius="15"
                    Padding="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Color="#99000000"/>
                </Border.Effect>
                <StackPanel>
                    <Button Style="{StaticResource PopupMenuButton}"
                            Click="Settings_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE713;" 
                                         FontFamily="Segoe MDL2 Assets" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,15,0"/>
                                <TextBlock Text="Paramètres" 
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource PopupMenuButton}"
                            Click="Logout_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7E8;" 
                                         FontFamily="Segoe MDL2 Assets" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,15,0"/>
                                <TextBlock Text="Se déconnecter" 
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource PopupMenuButton}"
                            Click="Quit_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7E8;" 
                                         FontFamily="Segoe MDL2 Assets" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,15,0"/>
                                <TextBlock Text="Quitter" 
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Reset -->
        <Button Content="Reset"
                Style="{StaticResource MainActionButton}"
                Width="120"
                Height="40"
                FontSize="14"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Click="ResetData_Click"/>
    </Grid>
</Page>
