<Page
    x:Class="Concentrade.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Menu principal">

    <!-- Fond dégradé -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F2027" Offset="0"/>
            <GradientStop Color="#203A43" Offset="0.5"/>
            <GradientStop Color="#2C5364" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Style boutons Apple -->
        <Style x:Key="ModernGlassButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Slider -->
        <Style TargetType="Slider" x:Key="AppleSliderStyle">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="#00D9A6"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Button Content="&#xE713;"
        FontFamily="Segoe MDL2 Assets"
        FontSize="24"
        Style="{StaticResource ModernGlassButton}"
        Width="50"
        Height="50"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="20,20,0,0"
        Click="Settings_Click"/>


        <!-- Bouton Se déconnecter en haut à droite -->
        <Button Content="Se déconnecter"
                Style="{StaticResource ModernGlassButton}"
                Width="150"
                Height="40"
                FontSize="14"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0"
                Click="Logout_Click"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ConcenTrade"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Boutons -->
            <Button Content="Start" Click="StartSession_Click" Style="{StaticResource ModernGlassButton}"/>

            <!-- Curseur de durée -->
            <StackPanel Margin="0,25,0,0" HorizontalAlignment="Center">
                <TextBlock x:Name="SliderLabel"
                           Text="Durée : 90 min"
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <Slider x:Name="DureeSlider"
                        Minimum="0"
                        Maximum="180"
                        Value="90"
                        TickFrequency="30"
                        IsSnapToTickEnabled="True"
                        Style="{StaticResource AppleSliderStyle}"
                        ValueChanged="DureeSlider_ValueChanged"/>
            </StackPanel>

            <Button Content="Statistiques" Click="Stats_Click" Style="{StaticResource ModernGlassButton}"/>
            <Button Content="Quitter" Click="Quit_Click" Style="{StaticResource ModernGlassButton}"/>
        </StackPanel>

        <!-- Reset -->
        <Button Content="Reset"
                Style="{StaticResource ModernGlassButton}"
                Width="120"
                Height="40"
                FontSize="14"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Click="ResetData_Click"/>
    </Grid>
</Page>
