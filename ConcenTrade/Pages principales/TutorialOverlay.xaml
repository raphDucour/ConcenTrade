<UserControl x:Class="Concentrade.Pages_principales.TutorialOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Background="Transparent">
        <Popup x:Name="TutorialPopup"
               Placement="Right"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="#202B38"
                    CornerRadius="24"
                    Padding="32"
                    BorderBrush="{DynamicResource TurquoiseBorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock x:Name="TutorialText"
                               Text="Explication du bouton..."
                               Foreground="{DynamicResource ZenTextBrush}"
                               FontSize="22"
                               FontFamily="Segoe UI"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"
                               VerticalAlignment="Center"/>
                    <Button Content="Suivant"
                            Click="NextTutorialStep_Click"
                            Style="{DynamicResource ZenButtonStyle}"
                            Margin="0,10,0,0"
                            Height="44"
                            FontSize="18"
                            FontWeight="Bold"
                            HorizontalAlignment="Right"
                            Width="120"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl> 