<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="ConcenTrade.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Paramètres"
      Background="#0D1C26">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Titre principal -->
        <TextBlock Text="Paramètres utilisateur"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,30,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Formulaire central -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Width="500" Margin="0,30,0,30">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Margin" Value="0,10,0,5"/>
                    </Style>
                    
                    <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
                        <Setter Property="Background" Value="#122B37"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#29414E"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <ToggleButton Name="ToggleButton"
                                                            Background="Transparent"
                                                            BorderBrush="Transparent"
                                                            Foreground="White"
                                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                <ContentPresenter Name="ContentSite"
                                                                Content="{TemplateBinding SelectionBoxItem}"
                                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"
                                                                Margin="8,0,0,0"/>
                                                <Popup Name="Popup" 
                                                       Placement="Bottom"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       AllowsTransparency="True" 
                                                       Focusable="False"
                                                       PopupAnimation="Slide">
                                                    <Grid Name="DropDown" 
                                                          Background="#122B37"
                                                          MinWidth="{TemplateBinding ActualWidth}"
                                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                        <Border Name="DropDownBorder"
                                                                Background="#122B37"
                                                                BorderBrush="#29414E"
                                                                BorderThickness="1"/>
                                                        <ScrollViewer Margin="4,6,4,6" 
                                                                    SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True"/>
                                                        </ScrollViewer>
                                                    </Grid>
                                                </Popup>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="CustomComboBoxItemStyle" TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#122B37"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="8,6">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#1A3B4C"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1A3B4C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <TextBlock Text="Prénom :" />
                <Border CornerRadius="6" Background="#122B37" BorderBrush="#29414E" BorderThickness="1" Margin="0,0,0,15">
                    <TextBox Name="PrenomBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             Padding="10"
                             FontSize="14"/>
                </Border>

                <TextBlock Text="Date de naissance (JJ/MM/AAAA) :" />
                <Border CornerRadius="6" Background="#122B37" BorderBrush="#29414E" BorderThickness="1" Margin="0,0,0,15">
                    <TextBox Name="DateNaissanceBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             Padding="10"
                             FontSize="14"
                             MaxLength="10"
                             PreviewTextInput="DateNaissance_PreviewTextInput"
                             TextChanged="DateNaissance_TextChanged"/>
                </Border>

                <TextBlock Text="Âge actuel :" Foreground="#8FA3B0"/>
                <TextBlock Name="AgeActuelBlock" Text="-- ans" Margin="0,0,0,15" FontSize="14" Foreground="#8FA3B0"/>

                <TextBlock Text="Moment de la journée préféré :" />
                <Border CornerRadius="6" Background="#122B37" BorderBrush="#29414E" BorderThickness="1" Margin="0,0,0,15">
                    <ComboBox Name="MomentCombo"
                             Style="{StaticResource CustomComboBoxStyle}"
                             Padding="6"
                             FontSize="14">
                        <ComboBoxItem Content="Matin" Style="{StaticResource CustomComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Après-midi" Style="{StaticResource CustomComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Soir" Style="{StaticResource CustomComboBoxItemStyle}"/>
                    </ComboBox>
                </Border>

                <TextBlock Text="Es-tu facilement distrait ?" />
                <Border CornerRadius="6" Background="#122B37" BorderBrush="#29414E" BorderThickness="1" Margin="0,0,0,15">
                    <ComboBox Name="DistraitCombo"
                             Style="{StaticResource CustomComboBoxStyle}"
                             Padding="6"
                             FontSize="14">
                        <ComboBoxItem Content="Non" Style="{StaticResource CustomComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Un petit peu" Style="{StaticResource CustomComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Oui" Style="{StaticResource CustomComboBoxItemStyle}"/>
                    </ComboBox>
                </Border>

                <!-- Section Applications bloquées -->
                <TextBlock Text="Applications bloquées" FontSize="20" FontWeight="SemiBold" Margin="0,30,0,10"/>
                <TextBlock Text="Gérez la liste des applications qui seront bloquées pendant vos sessions de concentration."
                         Foreground="#8FA3B0" FontSize="14" Margin="0,0,0,15"/>
                <Button Content="Gérer les applications bloquées"
                        Click="GererAppsBloquees_Click"
                        Height="45"
                        Background="#274A5E"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,0,30">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!-- Boutons bas -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,30" >
            <Button Content="Sauvegarder"
                    Width="140" Height="45" Margin="10,0"
                    FontWeight="SemiBold"
                    Background="#274A5E" Foreground="White"
                    BorderBrush="Transparent" Cursor="Hand"
                    Click="Sauvegarder_Click">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>

            <Button Content="Retour"
                    Width="140" Height="45" Margin="10,0"
                    FontWeight="SemiBold"
                    Background="#3E3E3E" Foreground="White"
                    BorderBrush="Transparent" Cursor="Hand"
                    Click="Retour_Click"/>
        </StackPanel>
    </Grid>
</Page>
