<Page x:Class="ConcenTrade.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Paramètres"
      Background="#102A38">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Paramètres utilisateur"
                       FontSize="26"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Infos utilisateur -->
            <TextBlock Text="Prénom :" Foreground="White"/>
            <TextBox Name="PrenomBox" Height="30" Margin="0,5,0,15" Padding="8"/>

            <TextBlock Text="Âge :" Foreground="White"/>
            <TextBox Name="AgeBox" Height="30" Margin="0,5,0,15" Padding="8"/>

            <TextBlock Text="Niveau d'études :" Foreground="White"/>
            <ComboBox Name="NiveauEtudesCombo" Height="30" Margin="0,5,0,30" Padding="4">
                <ComboBoxItem Content="Lycée" />
                <ComboBoxItem Content="Université - L1" />
                <ComboBoxItem Content="Université - L2" />
                <ComboBoxItem Content="Université - L3" />
                <ComboBoxItem Content="Master" />
                <ComboBoxItem Content="Autre" />
            </ComboBox>

            <!-- Focus Mode -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="Focus Mode :" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ToggleButton Name="FocusModeToggle" Width="60" Height="30" Content="Off"/>
            </StackPanel>

            <!-- Boutons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Sauvegarder"
                        Width="120" Height="40" Margin="10,0"
                        Background="#274A5E" Foreground="White"
                        BorderBrush="Transparent" FontWeight="Bold"
                        Cursor="Hand" />

                <Button Content="Retour"
                        Width="120" Height="40" Margin="10,0"
                        Background="#3E3E3E" Foreground="White"
                        BorderBrush="Transparent" FontWeight="Bold"
                        Cursor="Hand"
                        Click="Retour_Click" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
