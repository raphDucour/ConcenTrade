<Page x:Class="ConcenTrade.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Paramètres"
      Background="#102A38">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Paramètres utilisateur"
                       FontSize="26"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Prénom -->
            <TextBlock Text="Prénom :" Foreground="White"/>
            <TextBox Name="PrenomBox" Height="30" Margin="0,5,0,15" Padding="8"/>

            <!-- Âge -->
            <TextBlock Text="Âge :" Foreground="White"/>
            <TextBox Name="AgeBox" Height="30" Margin="0,5,0,15" Padding="8"/>

            <!-- Moment préféré -->
            <TextBlock Text="Moment de la journée préféré :" Foreground="White"/>
            <ComboBox Name="MomentCombo" Height="30" Margin="0,5,0,15" Padding="4">
                <ComboBoxItem Content="Matin" />
                <ComboBoxItem Content="Après-midi" />
                <ComboBoxItem Content="Soir" />
            </ComboBox>

            <!-- Distraction -->
            <TextBlock Text="Es-tu facilement distrait ?" Foreground="White"/>
            <ComboBox Name="DistraitCombo" Height="30" Margin="0,5,0,30" Padding="4">
                <ComboBoxItem Content="Non" />
                <ComboBoxItem Content="Un petit peu" />
                <ComboBoxItem Content="Oui" />
            </ComboBox>

            <!-- Boutons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Sauvegarder"
                        Width="120" Height="40" Margin="10,0"
                        Background="#274A5E" Foreground="White"
                        BorderBrush="Transparent" FontWeight="Bold"
                        Cursor="Hand"
                        Click="Sauvegarder_Click" />

                <Button Content="Retour"
                        Width="120" Height="40" Margin="10,0"
                        Background="#3E3E3E" Foreground="White"
                        BorderBrush="Transparent" FontWeight="Bold"
                        Cursor="Hand"
                        Click="Retour_Click" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
