<Window x:Class="ConcenTrade.ExtensionChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prolonger l'autorisation ?" Height="220" Width="470"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">
    <Border Background="#1C1C1E" CornerRadius="15" BorderBrush="#00E0FF" BorderThickness="2">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" TextAlignment="Center" Margin="10" FontSize="16" Foreground="White"/>
                <TextBlock Text="L'application sera fermée à la fin de ce nouveau délai." TextAlignment="Center" Margin="0,0,0,10" FontStyle="Italic" Foreground="#B0C4CC"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="1 min" Click="Extend_Click" Tag="1" Margin="5" Padding="16,8" Background="#232323" Foreground="White" FontWeight="Bold" Width="65"/>
                    <Button Content="2 min" Click="Extend_Click" Tag="2" Margin="5" Padding="16,8" Background="#232323" Foreground="White" FontWeight="Bold" Width="65"/>
                    <Button Content="3 min" Click="Extend_Click" Tag="3" Margin="5" Padding="16,8" Background="#232323" Foreground="White" FontWeight="Bold" Width="65"/>
                    <Button Content="4 min" Click="Extend_Click" Tag="4" Margin="5" Padding="16,8" Background="#232323" Foreground="White" FontWeight="Bold" Width="65"/>
                    <Button Content="5 min" Click="Extend_Click" Tag="5" Margin="5" Padding="16,8" Background="#232323" Foreground="White" FontWeight="Bold" Width="65"/>
                </StackPanel>
                <Button Content="Non, retourner au travail" Click="Decline_Click" Margin="10,20,10,0" Padding="16,8" Background="#E53935" Foreground="White" FontWeight="Bold" Width="220"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>