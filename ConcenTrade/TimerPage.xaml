<Page x:Class="Concentrade.TimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Timer"
      Opacity="0">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F2027" Offset="0"/>
            <GradientStop Color="#203A43" Offset="0.5"/>
            <GradientStop Color="#2C5364" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <!-- Animation d'entrée fluide -->
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:1"/>
                    <DoubleAnimation Storyboard.TargetName="TimerText"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     From="40" To="0" Duration="0:0:1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <TextBlock x:Name="TimerText"
                   Text="00:00"
                   FontSize="72"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <TextBlock.RenderTransform>
                <TranslateTransform Y="40"/>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Grid>
</Page>
