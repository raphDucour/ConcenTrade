<Page x:Class="Concentrade.QuestionAge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dégradé de fond -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#C9FCE5" Offset="0.0"/>
            <GradientStop Color="#A8E6CF" Offset="1.0"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#00D9A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Quel est ton âge ?" Margin="0,0,0,10"/>

            <!-- Champ avec Border arrondi -->
            <Border CornerRadius="10" Background="#F1F1F1" Margin="0,10,0,20">
                <TextBox x:Name="AgeInput" Background="Transparent" BorderThickness="0" Padding="10"
                         FontFamily="Segoe UI" FontSize="16" Foreground="#333"/>
            </Border>

            <Button Content="Suivant" Click="Suivant_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>
