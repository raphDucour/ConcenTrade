<Page x:Class="Concentrade.Questionnaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#F5F5FA">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Background="White">

            <TextBlock Text="🧠 Questionnaire de concentration" 
                       FontSize="22" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0,0,0,20"/>

            <!-- Prénom -->
            <TextBlock Text="Quel est ton prénom ?" Margin="0,5"/>
            <TextBox x:Name="NameInput" Margin="0,0,0,10"/>

            <!-- Âge -->
            <TextBlock Text="Quel est ton âge ?" Margin="0,5"/>
            <TextBox x:Name="AgeInput" Margin="0,0,0,10"/>

            <!-- Sexe -->
            <TextBlock Text="Quel est ton sexe ?" Margin="0,5"/>
            <ComboBox x:Name="SexeInput" Margin="0,0,0,10">
                <ComboBoxItem Content="Homme"/>
                <ComboBoxItem Content="Femme"/>
                <ComboBoxItem Content="Autre"/>
                <ComboBoxItem Content="Préférer ne pas dire"/>
            </ComboBox>

            <!-- Temps de concentration -->
            <TextBlock Text="Combien de temps souhaitez-vous rester concentré ?" Margin="0,5"/>
            <ComboBox x:Name="TempsConcentrationInput" Margin="0,0,0,10">
                <ComboBoxItem Content="15 minutes"/>
                <ComboBoxItem Content="25 minutes"/>
                <ComboBoxItem Content="45 minutes"/>
                <ComboBoxItem Content="60 minutes"/>
                <ComboBoxItem Content="Autre"/>
            </ComboBox>

            <!-- Moment préféré -->
            <TextBlock Text="À quel moment de la journée es-tu le plus concentré ?" Margin="0,5"/>
            <TextBox x:Name="MomentInput" Margin="0,0,0,10"/>

            <!-- Facilement distrait -->
            <TextBlock Text="Te considères-tu facilement distrait ?" Margin="0,5"/>
            <ComboBox x:Name="DistraitInput" Margin="0,0,0,10">
                <ComboBoxItem Content="Oui"/>
                <ComboBoxItem Content="Un petit peu"/>
                <ComboBoxItem Content="Non"/>
            </ComboBox>

            <!-- Ouverture au démarrage -->
            <TextBlock Text="Souhaites-tu que l'application s’ouvre au démarrage du PC ?" Margin="0,5"/>
            <ComboBox x:Name="StartupInput" Margin="0,0,0,20">
                <ComboBoxItem Content="Oui"/>
                <ComboBoxItem Content="Non"/>
            </ComboBox>

            <!-- Bouton Valider -->
            <Button Content="Valider" Click="Submit_Click" Width="200" Height="40" HorizontalAlignment="Center" Background="#8A2BE2" Foreground="White" FontWeight="Bold" BorderThickness="0"/>

        </StackPanel>
    </ScrollViewer>
</Page>
