<Page x:Class="Concentrade.Questionnaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#DFFFE8">

    <Page.Resources>
        <SolidColorBrush x:Key="MintGreen" Color="#A8E6CF"/>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Margin="20">

            <Label FontSize="24" FontWeight="Bold" Content="🧠 Questionnaire d'introduction"
                   HorizontalAlignment="Center" Margin="0,10" />

            <Label Content="Quel est ton prénom ?" />
            <Border CornerRadius="10" Background="White" Margin="5" Padding="2">
                <TextBox x:Name="NameInput" Background="Transparent" BorderThickness="0" Padding="8"/>
            </Border>

            <Label Content="Quel est ton âge ?" />
            <Border CornerRadius="10" Background="White" Margin="5" Padding="2">
                <TextBox x:Name="AgeInput" Background="Transparent" BorderThickness="0" Padding="8"/>
            </Border>

            <Label Content="Quel est ton sexe ?" />
            <Border CornerRadius="10" Background="{StaticResource MintGreen}" Margin="5" Padding="2">
                <ComboBox x:Name="SexeInput" SelectedIndex="0" Background="Transparent" BorderThickness="0" Padding="8">
                    <ComboBoxItem>Homme</ComboBoxItem>
                    <ComboBoxItem>Femme</ComboBoxItem>
                    <ComboBoxItem>Autre</ComboBoxItem>
                </ComboBox>
            </Border>

            <Label Content="À quel moment de la journée es-tu le plus concentré ?" />
            <Border CornerRadius="10" Background="{StaticResource MintGreen}" Margin="5" Padding="2">
                <ComboBox x:Name="MomentInput" SelectedIndex="0" Background="Transparent" BorderThickness="0" Padding="8">
                    <ComboBoxItem>Matin</ComboBoxItem>
                    <ComboBoxItem>Après-midi</ComboBoxItem>
                    <ComboBoxItem>Soir</ComboBoxItem>
                    <ComboBoxItem>Nuit</ComboBoxItem>
                    <ComboBoxItem>Jamais</ComboBoxItem>
                </ComboBox>
            </Border>

            <Label Content="Te considères-tu facilement distrait ?" />
            <Border CornerRadius="10" Background="{StaticResource MintGreen}" Margin="5" Padding="2">
                <ComboBox x:Name="DistraitInput" SelectedIndex="0" Background="Transparent" BorderThickness="0" Padding="8">
                    <ComboBoxItem>Oui</ComboBoxItem>
                    <ComboBoxItem>Un petit peu</ComboBoxItem>
                    <ComboBoxItem>Non</ComboBoxItem>
                </ComboBox>
            </Border>

            <Border CornerRadius="10" Margin="15,20">
                <Button Content="Valider" Click="Submit_Click"
                        Background="#00D9A6" Foreground="White"
                        FontSize="18" Padding="10" BorderThickness="0"/>
            </Border>

        </StackPanel>
    </Grid>
</Page>
